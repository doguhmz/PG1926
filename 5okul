class Okul():
    def __init__(self,calisan,sinifoz,ogretmenoz,fiziki,ogrencisayisi,velidusuncesi):
        self.calisan = calisan
        self.sinifoz = sinifoz
        self.ogretmenoz = ogretmenoz
        self.fiziki = fiziki
        self.ogrencisayisi = ogrencisayisi
        self.velidusuncesi = velidusuncesi

class A_Okulu(Okul):
    pass
class B_Okulu(Okul):
    pass
class C_Okulu(Okul):
    pass       

a_okulu = A_Okulu(25,"Sınıflar küçüktür","Öğretmenler cana yakındır","Bahçesi ve basketbol sahası vardır",300,"Veliler genel olarak olumlu düşünmektedir")
b_okulu = B_Okulu(15,"Sınıflar yeterlidir","Öğretmenlerin çoğu kabadır","Bahçesi yoktur",200,"Veliler sık sık şikayette bulunmaktadırlar")
c_okulu = C_Okulu(35, "Sınıflar gayet büyüktür","Öğretmenler idealisttir", "Bahçesi gayet büyüktür ve yurtları vardır",450,"Veliler okul ile birlikte aile ortamı oluşturmuşlardır")

print("***************************")
print("A_Okulu")
print("Çalışan Sayısı:",a_okulu.calisan)
print("Sınıf özellikleri:",a_okulu.sinifoz)
print("Öğretmen özellikleri:",a_okulu.ogretmenoz)
print("Fiziki özellikleri:",a_okulu.fiziki)
print("Öğrenci sayısı:",a_okulu.ogrencisayisi)
print("Veli düşüncesi:",a_okulu.velidusuncesi)
print("***************************")
print("B_Okulu")
print("Çalışan Sayısı:",b_okulu.calisan)
print("Sınıf özellikleri:",b_okulu.sinifoz)
print("Öğretmen özellikleri:",b_okulu.ogretmenoz)
print("Fiziki özellikleri:",b_okulu.fiziki)
print("Öğrenci sayısı:",b_okulu.ogrencisayisi)
print("Veli düşüncesi:",b_okulu.velidusuncesi)
print("***************************")
print("C_Okulu")
print("Çalışan Sayısı:",c_okulu.calisan)
print("Sınıf özellikleri:",c_okulu.sinifoz)
print("Öğretmen özellikleri:",c_okulu.ogretmenoz)
print("Fiziki özellikleri:",c_okulu.fiziki)
print("Öğrenci sayısı:",c_okulu.ogrencisayisi)
print("Veli düşüncesi:",c_okulu.velidusuncesi)
print("***************************")
